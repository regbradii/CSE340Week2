<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
    </ul>
   <% } %>

<%# This is the form for the user to log in %>
<form method="post" id="loginForm" action="/account/login">
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required value="<%= locals.email %>">
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>
    <div>
        <button type="submit">Log In</button>
    </div>
    <div class="form-footer">
      No Account? 
      <a href="/account/register">Sign Up</a>
    </div>
    
</form>
    
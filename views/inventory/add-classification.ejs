<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
    </ul>
   <% } %>

<form method="post" action="/inv/classification">
    <div>
        <label for="classification">Classification Name</label>
        <div class="classification-name-requirements">
            Name cannot contain spaces or special characters.
        </div>
        <input type="text" id="name" name="name" required value="<%= locals.name %>"> 
    </div>
     <!-- pattern="^[a-zA-Z0-9]+$" -->
    <div>
        <button type="submit">Add Classification</button>
    </div>
</form>